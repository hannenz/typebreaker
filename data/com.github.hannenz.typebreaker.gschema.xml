<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
	<schema id="com.github.hannenz.typebreaker.settings" path="/com/github/hannenz/typebreaker/settings/">
		<key type="b" name="active">
			<default>true</default>
			<summary>Type Breaker active</summary>
			<description>Type Breaker active</description>
		</key>
		<key type="i" name="active-time">
			<default>5400</default>
			<summary>Active time</summary>
			<description>Active period in seconds ("Typing time")</description>
		</key>
		<key type="i" name="warn-time">
			<default>180</default>
			<summary>Warn time</summary>
			<description>Warn user n seconds before the break</description>
		</key>
		<key type="i" name="break-time">
			<default>300</default>
			<summary>Break time</summary>
			<description>Duration of the typing break</description>
		</key>
		<key type="i" name="postpones-count">
			<default>2</default>
			<summary>Postpones</summary>
			<description>Number of allowed postpones</description>
		</key>
		<key type="i" name="postpone-time">
			<default>60</default>
			<summary>Postone time</summary>
			<description>Postpone break by this number of seconds</description>
		</key>
	</schema>
</schemalist>

